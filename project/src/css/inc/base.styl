
KMP_ORANGE = #EE691C
KMP_BLUE = #237CBE
KMP_GREEN = #35AF64

// For the flower
KMP_STIGMA = #072308
KMP_IRIS = #FFFFFF

KMP_GRAY_PETAL = #BCBEC0
KMP_GRAY_STIGMA = #666a6d
    


body
    padding: 0
    margin: 0
    width: 100%

body, input, textarea 
    font-family "Raleway", "Helvetica Neue", "Helvetica", Arial, sans-serif
    // Font testing area
    -webkit-text-stroke: 1px transparent;

    // Gets overwritten on login screen, but if we don't specify here then IE can end up leaving it black
    background-color: #ffffff


.main.menu
    text-align left
    border-radius 0
    position fixed
    top 0
    left 0
    width 100%
    // Mapbox sets it's container to a z-index of 3 - we want our menu to appear above it
    z-index 4



.centered.area
    margin auto

    &.medium
        width 40em
    &.half
        width 50%
    
    &.three.quarters
        width 75%

#globalExceptions
    position: fixed
    top: 2rem
    left: 2rem
    width: 40%
    z-index: 999999

    .exception
        padding: 1rem
        margin-top: 1rem
        background: #000000
        color: desaturate(#ff0000, 30%)
        border: 4px solid #ff0000
        cursor: pointer
        text-align: center

        .guru
            margin-bottom: 0.5em

        .headline
            font-weight: bold

        .uuid
            font-size: 1.4em
            padding: 0.5em

        .cause
            font-size: 0.8em


        &:hover
            color: #ff0000
            border: 4px solid #ff0000

.general.message
    padding 0
    z-index 1001
    
    .message
        margin 0
        border-radius 0
        height 100%
        text-align center
        padding-top 0.6rem
        

