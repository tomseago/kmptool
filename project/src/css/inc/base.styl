///////////////////
// Overrides for semantic button colors

// hover = more saturated
// active = darker
SAT_AMT=30%
DARK_AMT=10%

/*-------------------
       Primary
--------------------*/
// Semantic is red
.ui.primary.buttons .button
.ui.primary.button 
    background-color: KMP_GREEN
    color: #FFFFFF

.ui.primary.buttons .button:hover
.ui.primary.button:hover
.ui.primary.buttons .active.button
.ui.primary.button.active 
    background-color: saturate(KMP_GREEN, SAT_AMT)
    color: #FFFFFF

.ui.primary.buttons .button:active
.ui.primary.button:active 
    background-color: darken(KMP_GREEN, DARK_AMT)
    color: #FFFFFF


/*-------------------
      Secondary
--------------------*/
// Semantic is cyan
.ui.secondary.buttons .button
.ui.secondary.button 
    background-color: KMP_BLUE
    color: #FFFFFF

.ui.secondary.buttons .button:hover
.ui.secondary.button:hover
.ui.secondary.buttons .active.button
.ui.secondary.button.active 
    background-color: saturate(KMP_BLUE, SAT_AMT)
    color: #FFFFFF;

.ui.secondary.buttons .button:active,
.ui.secondary.button:active 
    background-color: darken(KMP_BLUE, DARK_AMT)
    color: #FFFFFF;



/*--------------
     Toggle
---------------*/
/* Toggle (Modifies active state to give affordances) */
// Semantic is green here. We use just a much brighter green, so probably
// doesn't work that well :(
.ui.toggle.buttons .active.button
.ui.buttons .button.toggle.active
.ui.button.toggle.active 
    background-color: lighten(KMP_GREEN, 30%) !important;

.ui.button.toggle.active:hover
    // Copied lighten(KMP_GREEN, 30%)
    background-color: saturate( #23c160, 30%) !important;


