.main.menu
    text-align left
    border-radius 0
    position fixed
    top 0
    left 0
    width 100%
    // Mapbox sets it's container to a z-index of 3 - we want our menu to appear above it
    z-index 4

body
    min-height: 100%
    
#app
    min-height: 100%
    
    .pusher
        padding-top: 4rem
        
#footer
    clear both
    height: 3rem
    margin-top: -3rem

.centered.area
    margin auto

    &.medium
        width 40em
    &.half
        width 50%
    
    &.three.quarters
        width 75%

#globalExceptions
    position: fixed
    top: 2rem
    left: 2rem
    width: 40%
    z-index: 999999

    .exception
        padding: 1rem
        margin-top: 1rem
        background: #000000
        color: desaturate(#ff0000, 30%)
        border: 4px solid #ff0000
        cursor: pointer
        text-align: center

        .guru
            margin-bottom: 0.5em

        .headline
            font-weight: bold

        .uuid
            font-size: 1.4em
            padding: 0.5em

        .cause
            font-size: 0.8em


        &:hover
            color: #ff0000
            border: 4px solid #ff0000

.general.message
    padding 0
    z-index 1001
    
    .message
        margin 0
        border-radius 0
        height 100%
        text-align center
        padding-top 0.6rem
        

showClickable()
    cursor: pointer

    &:hover
        box-shadow: 0 0 10px KMP_blue

    &.icon:hover
        box-shadow: none
        text-shadow: 0 0 5px KMP_blue

.show.clickable
    showClickable()



.clear-bottom
    clear: both

// Make regular anchor links look better

a
    color: inherit
    text-decoration-line: underline
    text-decoration-style: dashed

a:visited
    color: inherit

a:hover
    color: KMP_BLUE
    text-decoration-style: solid

