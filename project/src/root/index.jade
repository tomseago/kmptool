extends layout.jade

block content
    #globalExceptions(ng-show="gExceptions.length > 0" ng-cloak)
        .exception.item(ng-repeat="(ix, ex) in gExceptions" )
            .guru(ng-click="removeException(ex)") Guru Meditation Error. Click to remove.
            .uuid {{ex.uuid}}  
            .headline(ng-click="removeException(ex)") {{ex.headline}}
            .cause(ng-click="removeException(ex)") {{ex.cause}}
    .ui.bottom.sidebar.general.message
        .ui.message {{gGeneralMessage}}
        
    #app(ng-cloak).pusher
        #topBar.ui.inverted.main.menu(ng-controller="TopBarCtrl")
            .project-new.ui.modal
                i.close.icon
                .header 
                    New Project
                .content
                    .ui.form
                        .field
                            label Project Name
                            input(type="text" ng-model="newProjectName")
                .actions
                    button.ui.button Cancel
                    button.ui.positive.button(ng-click="createProject()") Create
                        
            a.item(href="/#/start")
                i.home.icon
                | Home
            .ui.projects.dropdown.link.item(href="/#/projectList")
                i.folder.icon
                span.text {{gCurrentProject ? gCurrentProject.name : "Projects" }}
                .menu
                    .header {{(gProjects && gProjects.length) ? "Projects" : "No Projects Exist"}}
                    .item(ng-repeat="proj in gProjects" data-value="{{proj.id}}") {{proj.name}}
                    .divider
                    .item(data-value="__SEE_ALL__")
                        i.list.icon
                        i See All
                    .item(data-value="__NEW_PROJECT__")
                        i.plus.icon
                        i Add Project...
